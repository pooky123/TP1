<Window x:Class="TP1.AddResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add result" Height="280" Width="520"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#212529">
    <Window.Resources>
        <SolidColorBrush x:Key="Card" Color="#2B3035"/>
        <SolidColorBrush x:Key="Text" Color="#E9ECEF"/>
        <SolidColorBrush x:Key="Border" Color="#3A3F44"/>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource Text}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="PillTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource Text}"/>
            <Setter Property="Background" Value="{StaticResource Card}"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" CornerRadius="18" Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PillCombo" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource Text}"/>
            <Setter Property="Background" Value="{StaticResource Card}"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Grid.Column="2" Focusable="False" IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" ClickMode="Press" Background="{StaticResource Card}"/>
                            <ContentPresenter Margin="10,6,28,6" HorizontalAlignment="Left" VerticalAlignment="Center" Content="{TemplateBinding SelectionBoxItem}"/>
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Border Background="{StaticResource Card}" BorderBrush="{StaticResource Border}" BorderThickness="1" CornerRadius="8" Padding="4">
                                    <ScrollViewer>
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PillButton" TargetType="Button">
            <Setter Property="Foreground" Value="#111"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="18" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Evaluation:"/>
        <ComboBox x:Name="cbEval" Grid.Row="0" Grid.Column="1" Style="{StaticResource PillCombo}" Margin="0,0,0,8"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Student Id:"/>
        <TextBox x:Name="txtId" Grid.Row="1" Grid.Column="1" Style="{StaticResource PillTextBox}" PreviewTextInput="NumericOnly" Margin="0,0,0,8" Width="180"/>
        <Label Grid.Row="1" Grid.Column="2" Content="Result (pts):"/>
        <TextBox x:Name="txtResult" Grid.Row="1" Grid.Column="3" Style="{StaticResource PillTextBox}" PreviewTextInput="NumericOnly" Margin="0,0,0,8" Width="180"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Last Name:"/>
        <TextBox x:Name="txtLast" Grid.Row="2" Grid.Column="1" Style="{StaticResource PillTextBox}" IsReadOnly="True" Margin="0,0,0,8"/>
        <Label Grid.Row="2" Grid.Column="2" Content="First Name:"/>
        <TextBox x:Name="txtFirst" Grid.Row="2" Grid.Column="3" Style="{StaticResource PillTextBox}" IsReadOnly="True" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="120" Margin="0,8,8,0" Click="Cancel_Click" Style="{StaticResource PillButton}"/>
            <Button Content="Save" Width="120" Margin="0,8,0,0" Click="Save_Click" Style="{StaticResource PillButton}"/>
        </StackPanel>
    </Grid>
</Window>
