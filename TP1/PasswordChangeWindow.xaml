<Window x:Class="TP1.PasswordChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP1"
        mc:Ignorable="d"
                Title="AddStudentWindow" Height="350" Width="500"
Style="{StaticResource DefaultWindowStyle}">
    <StackPanel>
        <StackPanel>
            <Line Margin="0 30 0 10" X1="0" Y1="0" X2="375" Y2="0" Stroke="White" StrokeThickness="2" HorizontalAlignment="Center"/>
            <TextBlock HorizontalAlignment="Center">Change password</TextBlock>
            <Line Margin="0 10 0 10" X1="0" Y1="0" X2="375" Y2="0" Stroke="White" StrokeThickness="2" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Margin="80 10 20 0" Orientation="Horizontal">
            <TextBlock Margin="0 0 10 0">Old passwork: </TextBlock>
            <TextBox Padding="0 10 220 0" x:Name="txtBoxOld"></TextBox>
        </StackPanel>
        <StackPanel Margin="80 0 20 5" Orientation="Horizontal">
            <TextBlock Margin="0 0 10 0">New password: </TextBlock>
            <TextBox Padding="0 10 220 0" x:Name="txtBoxNew"></TextBox>
        </StackPanel>
        <StackPanel Margin="60 0 20 10" Orientation="Horizontal">
            <TextBlock Margin="0 0 10 0">Confirm password: </TextBlock>
            <TextBox Padding="0 10 220 0" x:Name="txtBoxConf"></TextBox>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="btnChange">Change password</Button>
            <Button x:Name="btnCancel">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
